<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".settings.mode.ModeActivity">

    <com.davinci.wolf.settings.mode.ModeTile
        android:id="@+id/tileCommute"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/tileRace"
        app:layout_constraintEnd_toStartOf="@+id/tileTour"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:src="@drawable/mode_commute"
        app:textSize="@dimen/mode.TextSize"
        app:title="@string/mode.commute"/>

    <com.davinci.wolf.settings.mode.ModeTile
        android:id="@+id/tileTour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/tileOffroad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tileCommute"
        app:layout_constraintTop_toTopOf="parent"
        app:src="@drawable/mode_tour"
        app:textSize="@dimen/mode.TextSize"
        app:title="@string/mode.tour"/>

    <com.davinci.wolf.settings.mode.ModeTile
        android:id="@+id/tileRace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tileOffroad"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tileCommute"
        app:src="@drawable/mode_race"
        app:textSize="@dimen/mode.TextSize"
        app:title="@string/mode.race"/>

    <com.davinci.wolf.settings.mode.ModeTile
        android:id="@+id/tileOffroad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tileRace"
        app:layout_constraintTop_toBottomOf="@+id/tileTour"
        app:src="@drawable/mode_offroad"
        app:textSize="@dimen/mode.TextSize"
        app:title="@string/mode.offroad"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onClick"
        android:src="@drawable/icon_check"
        android:tint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>